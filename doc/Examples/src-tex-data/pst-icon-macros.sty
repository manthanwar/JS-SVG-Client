% Trigonometry
\def\fpasin#1#2#3{\FPeval{#1}{\fpeval{round(asind(#2/#3),4)}}}%
\def\aSin#1#2{\fpeval{round(asind(#1/#2),4)}}%
\def\aCos#1#2{\fpeval{round(acosd(#1/#2),4)}}%
\def\aTan#1#2{\fpeval{round(atand(#1/#2),4)}}%

% #1 = center, #2 = radius, #3 = theta
\newcommand{\sind}[3]{\fpeval{round(#1 + #2 * sind(#3),4)}}%
\newcommand{\cosd}[3]{\fpeval{round(#1 + #2 * cosd(#3),4)}}%
\newcommand{\tand}[3]{\fpeval{round(#1 + #2 * tand(#3),4)}}%

% polar coordinates
\newcommand{\polarX}[3]{\fpeval{round(#1 + #2 * cosd(#3),4)}}%
\newcommand{\polarY}[3]{\fpeval{round(#1 + #2 * sind(#3),4)}}%

