% Currency Euro
% #1 = size
% #2 = color
% origin at circle center
% Proportion width 6 x height 7.5
% Scale by width
%-------------------------------------------------------------------------------
\newcommand{\currencyEuro}[2][6]{%
\FPeval{\ans}{round(#1/6:3)}\psscalebox{\ans}{%
\psset{fillstyle=solid,fillcolor=#2,linestyle=none}%

\pscustom{
\psarc(0,0){5}{40}{320}
\psarcn(0,0){6}{309.6}{45}
\closepath
}

%\psline[linecolor=red](0,-6)(5.8,8)
%\rput(-7.5,6.5){\psline[linecolor=blue](0,-6)(5.8,8)}
%\rput(-7.5,4.5){\psline[linecolor=red](0,-6)(5.8,8)}

%\psline(-7.5,0.5)(2.7,0.5)
%\psline(-7.1,1.5)(3.1,1.5)

%\psline(-7.1,-0.5)(2.28,-0.5)
%\psline(-7.5,-1.5)(1.86,-1.5)

\pspolygon(-7.5,0.5)(2.7,0.5)(3.1,1.5)(-7.1,1.5)
\pspolygon(-7.1,-0.5)(2.28,-0.5)(1.86,-1.5)(-7.5,-1.5)
}} % end \currencyEuro
