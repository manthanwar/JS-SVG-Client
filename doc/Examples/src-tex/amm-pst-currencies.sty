% Currency Rupee
% #1 = size
% #2 = color
% origin at bottom left
% Proportion width 6 x height 9
% Scale by height
%-------------------------------------------------------------------------------
\newcommand{\currencyRupee}[2][6]{%
\FPeval{\ans}{round(#1/6:3)}\psscalebox{\ans}{%
\psset{fillstyle=solid,fillcolor=#2,linestyle=none}%

%\psbezier(1.5,8.2)(3.6,8.2)(4.7,5.7)(0.3,4.9)
%\psline(0.3,4.9)(0.3,4.1)(3.4,0.2)(4.9,0.2)(1.6,4.3)
%\psbezier(1.6,4.3)(5.2,4.6)(4.5,7.5)(4.0,8.2)

\rput(0,-0.2){
\pscustom{
\psbezier(1.5,8.2)(3.6,8.2)(4.7,5.7)(0.3,4.9)
\psline(0.3,4.9)(0.3,4.1)(3.4,0.2)(4.9,0.2)(1.6,4.3)
\psbezier(5.2,4.6)(4.5,7.5)(4.0,8.2)
}

\pspolygon(0,8.2)(5.5,8.2)(6,9)(0.5,9)
\rput(0,-1.7){\pspolygon(0,8.2)(5.5,8.2)(6,9)(0.5,9)}
}%
}} % end \currencyRupee
