\def\motifCurve{%
\psbezier[fillstyle=none](5,4)(15,10)(24,8)(24,4)\pscircle(22.5,4){1.5}}%
\def\motifCurveM{\motifCurve\psscalebox{1 -1}{\motifCurve}% mirror
\pspolygon(7,0)(15,-4)(19,0)(15,4)\pscircle(27,0){1.5}}%
\def\motifFlower{\pscircle[fillstyle=none](0,0){4}%
\multido{\nA=0+90}{4}{\rput{\nA}(0,0){\motifCurveM}}}%
\def\motifTriangle{\pspolygon[dimen=inner](12,12)(17,12)(12,17)}%
%-------------------------------------------------------------------------------
% \def\motifMain{\motifFlower\rput{-90}{\motifTriangle}\rput{90}{\motifTriangle}}%
%-------------------------------------------------------------------------------
\newcommand{\motifCornerR}[1][]{\setkeys{\kvf}{#1}%
\FPeval{\wide}{round(\iconWidth/60:3)}\psscalebox{\wide}{%
\motifFlower\motifTriangle\rput{90}{\motifTriangle}%
}}%
%-------------------------------------------------------------------------------
% 60 * sqrt(2) = 84.8528137424
% 30 * sqrt(2) = 42.4264068712
\newcommand{\motifCorner}[1][]{\setkeys{\kvf}{#1}%
\FPeval{\wide}{round(\iconWidth/42.4264068712:3)}\psscalebox{\wide}{%
\rput{45}(0,0){\motifFlower\motifTriangle\rput{90}{\motifTriangle}}%
}}%
%-------------------------------------------------------------------------------
\newcommand{\motifMainR}[1][]{\setkeys{\kvf}{#1}%
\FPeval{\wide}{round(\iconWidth/60:3)}\psscalebox{\wide}{%
\motifFlower\rput{-90}{\motifTriangle}\rput{90}{\motifTriangle}%
}}%
%-------------------------------------------------------------------------------
\newcommand{\motifMain}[1][]{\setkeys{\kvf}{#1}%
\FPeval{\wide}{round(\iconWidth/42.4264068712:3)}\psscalebox{\wide}{%
\rput{-45}(0,0){\motifFlower\rput{-90}{\motifTriangle}\rput{90}{\motifTriangle}}%
}}%
