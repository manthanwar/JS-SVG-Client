% #2 : how many times horizontal = 10
% #3 : how many times vertical = 95
% #4 : vertical gap factor = 0.7
\newcommand{\pageBackgroundText}[4]{%
\def\noH{\fpEval{280/#2}}%
\def\noV{\fpEval{190/#3}}%
\def\noVs{\fpEval{#4*190/#3}}%
