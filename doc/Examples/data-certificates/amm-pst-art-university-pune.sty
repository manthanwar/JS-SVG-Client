\psbezier[xunit=-1mm]%
(  0,10)( -3,12)( -3,15)% C01 \psbezier( -3,15)
( -3,15)( -7,15)( -7,20)% C02 \psbezier( -7,20)
( -3,16)(  0,26)(  0,26)% C03
\closepath%
}% \pscustom
% \pspolygon(0,24)(3,27)(0,30)(-3,27)%
\pscircle(0,27){3}%
}%% Figure Floral Pune University Leaf
